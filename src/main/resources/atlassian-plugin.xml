<atlassian-plugin key="${project.artifactId}" name="${project.name}"
  plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="Everit Kft." url="http://www.everit.biz" />
  </plugin-info>

  <resource type="i18n" name="i18n" location="META-INF/i18n/everit-configuration" />

  <web-section key="everit" name="Everit Configuration" location="admin_plugins_menu"
    weight="110">
    <label key="admin_plugins_menu.section_everit" />
  </web-section>

  <web-item key="special_issues" name="Everit Special Issues" section="admin_plugins_menu/everit"
    weight="60">
    <label key="admin_plugins_menu.section_everit.special_issues" />
    <link>/plugins/servlet/everit/special-issues</link>
  </web-item>

  <web-item key="work_schemes" name="Everit Work Schemes" section="admin_plugins_menu/everit"
    weight="60">
    <label key="admin_plugins_menu.section_everit.work_schemes" />
    <link>/plugins/servlet/everit/work-schemes</link>
  </web-item>

  <web-item key="holiday_schemes" name="Everit Holiday Schemes" section="admin_plugins_menu/everit"
    weight="60">
    <label key="admin_plugins_menu.section_everit.holiday_schemes" />
    <link>/plugins/servlet/everit/holiday-schemes</link>
  </web-item>

  <web-item key="user_holiday_amount" name="Everit User Holiday Amount" section="admin_plugins_menu/everit"
    weight="60">
    <label key="admin_plugins_menu.section_everit.user_holiday_amount" />
    <link>/plugins/servlet/everit/user-holiday-amount</link>
  </web-item>

  <servlet name="Special Issues" class="org.everit.jira.configuration.plugin.SpecialIssuesServlet"
    key="everit-special-issues">
    <url-pattern>/everit/special-issues</url-pattern>
  </servlet>

  <servlet name="HolidaySchemes" class="org.everit.jira.configuration.plugin.HolidaySchemesServlet"
    key="everit-holiday-schemes">
    <url-pattern>/everit/holiday-schemes</url-pattern>
  </servlet>

  <servlet name="WorkSchemes" class="org.everit.jira.configuration.plugin.WorkSchemesServlet"
    key="everit-work-schemes">
    <url-pattern>/everit/work-schemes</url-pattern>
  </servlet>

  <servlet name="WorkSchemes" class="org.everit.jira.configuration.plugin.UserHolidayAmountServlet"
    key="everit-user-holiday-amount">
    <url-pattern>/everit/user-holiday-amount</url-pattern>
  </servlet>

  <web-resource name="Everit Jira Manage Scheme" key="manage-schemes">
    <resource name="manage-schemes.js" type="download" location="META-INF/webresource/js/manage-schemes.js" />
    <context>org.everit.jira.configuration</context>
  </web-resource>

  <web-resource name="Everit Jira Configuration Common" key="common">
    <resource name="common.js" type="download" location="META-INF/webresource/js/common.js" />
    <context>org.everit.jira.configuration</context>
  </web-resource>

  <web-resource name="Everit Jira Configuration AreYouSure" key="are-you-sure">
    <resource name="are-you-sure.js" type="download" location="META-INF/webresource/js/are-you-sure.js" />
    <context>org.everit.jira.configuration</context>
  </web-resource>

  <web-resource name="Everit Jira Configuration Scheme Users" key="scheme-users">
    <resource name="scheme-users.js" type="download" location="META-INF/webresource/js/scheme-users.js" />
    <context>org.everit.jira.configuration</context>
  </web-resource>

  <web-resource name="Everit Jira Unknown error after Ajax" key="unknown-error">
    <resource name="unknown-error.js" type="download" location="META-INF/webresource/js/unknown-error.js" />
    <context>org.everit.jira.configuration</context>
  </web-resource>
</atlassian-plugin>
