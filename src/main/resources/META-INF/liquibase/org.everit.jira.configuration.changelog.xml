<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
  logicalFilePath="org.everit.jira.configuration">

  <changeSet id="1.0.0" author="everit">
    <createTable tableName="everit_jira_spec_proj">
      <column name="spec_proj_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_spec_proj" />
      </column>
      <column name="project_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_spec_proj_proj" referencedTableName="project"
          referencedColumnNames="id" nullable="false" />
      </column>
      <column name="specialty" type="varchar(60)">
        <constraints nullable="false" />
      </column>
    </createTable>
    <createIndex tableName="everit_jira_spec_proj" indexName="i_everit_jira_spec_proj_spcty">
      <column name="specialty" />
    </createIndex>
    <addUniqueConstraint columnNames="project_id,specialty" tableName="everit_jira_spec_proj"
      constraintName="u_everit_jira_spec_proj_pid_s" />

    <createTable tableName="everit_jira_spec_issue">
      <column name="spec_issue_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_spec_issue" />
      </column>
      <column name="issue_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_spec_iss_iss" referencedTableName="jiraissue"
          referencedColumnNames="id" nullable="false" />
      </column>
      <column name="specialty" type="varchar(60)">
        <constraints nullable="false" />
      </column>
    </createTable>
    <createIndex tableName="everit_jira_spec_issue" indexName="i_everit_jira_spec_iss_spcty">
      <column name="specialty" />
    </createIndex>
    <addUniqueConstraint columnNames="issue_id,specialty" tableName="everit_jira_spec_issue"
      constraintName="u_everit_jira_spec_iss_pid_s" />

    <createTable tableName="everit_jira_user_hday_c">
      <column name="user_holiday_count_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_user_hday_c" />
      </column>
      <column name="user_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_u_hday_c_u" referencedTableName="cwd_user"
          referencedColumnNames="id" nullable="false" />
      </column>
      <column name="year_" type="int">
        <constraints nullable="false" />
      </column>
      <column name="holiday_count" type="int">
        <constraints nullable="false" />
      </column>
      <column name="description_" type="varchar(255)" />
    </createTable>
    <createIndex tableName="everit_jira_user_hday_c" indexName="i_everit_jira_u_hday_c_y">
      <column name="year_" />
    </createIndex>
    <addUniqueConstraint columnNames="user_id,year_" tableName="everit_jira_user_hday_c"
      constraintName="u_everit_jira_user_hday_c_uy" />

    <createTable tableName="everit_jira_work_scheme">
      <column name="work_scheme_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_work_sch" />
      </column>
      <column name="name_" type="varchar(255)">
        <constraints nullable="false" unique="true" uniqueConstraintName="u_everit_jira_work_scheme_nm" />
      </column>
      <column name="default_daily_work_hours" type="float" />
    </createTable>

    <createTable tableName="everit_jira_user_work_scheme">
      <column name="user_work_scheme_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_usr_work_sch" />
      </column>
      <column name="work_scheme_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_everit_jira_usr_work_s_ws"
          referencedTableName="everit_jira_work_scheme" referencedColumnNames="work_scheme_id" />
      </column>
      <column name="user_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_usr_work_s_u" referencedTableName="cwd_user"
          referencedColumnNames="id" nullable="false" />
      </column>
      <column name="start_date" type="date">
        <constraints nullable="false" />
      </column>
      <column name="end_date_excluded" type="date" />
      <column name="daily_work_hours" type="float" />
    </createTable>
    <createIndex tableName="everit_jira_user_work_scheme" indexName="i_everit_jira_user_w_sch_sd">
      <column name="start_date" />
    </createIndex>
    <createIndex tableName="everit_jira_user_work_scheme" indexName="i_everit_jira_user_w_sch_ed">
      <column name="end_date_excluded" type="date" />
    </createIndex>
    
    <createTable tableName="everit_jira_non_working_days">
      <column name="user_work_scheme_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_usr_work_sch" />
      </column>
      <column name="work_scheme_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_everit_jira_usr_work_s_ws"
          referencedTableName="everit_jira_work_scheme" referencedColumnNames="work_scheme_id" />
      </column>
      <column name="user_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_usr_work_s_u" referencedTableName="cwd_user"
          referencedColumnNames="id" nullable="false" />
      </column>
      <column name="start_date" type="date">
        <constraints nullable="false" />
      </column>
      <column name="end_date_excluded" type="date" />
      <column name="daily_work_hours" type="float" />
    </createTable>
    
  </changeSet>

</databaseChangeLog>